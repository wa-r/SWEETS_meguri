<h2>会員ページ</h2>
<table>
  <tr>
    <td><%= attachment_image_tag @member, :profile_image, fallback: "no_image.jpeg", size: '20x20', format: 'jpeg' %></td>
  <tr>
    <td>名前</td>
    <td><%= @member.name %></td>
  </tr>
　<tr>
　  <td>紹介文</td>
　  <td><%= @member.introduction %></td>
　</tr>
　<tr>
　  <td><%= link_to "編集", edit_member_path %></td>
　</tr>
  <tr>
    <td>
      <% if current_member %>
        <%= link_to "つぶやき投稿へ", new_tweet_path %>
      <% end %>
    </td>
  </tr>
</table>